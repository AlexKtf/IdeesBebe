%h1 Listing products

%table
  %tr
    %th 
    %th Name
    %th Slug
    %th Description
    %th
    %th
    %th

  - @user.products.each do |product|
    %tr
      - if product.has_main_asset?
        %td= image_tag(product.get_main_asset.photo.thumb.url, alt: product.name, title: product.name)
      - else
        %td= image_tag('default_avatar_thumb.png')
      %td= product.name
      %td= product.slug
      %td= product.description
      %td= link_to 'Show', product_path(product.slug)
      %td= link_to 'Edit', edit_product_path(product.slug)
      %td= link_to 'Destroy', product, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Product', new_profile_product_path(@user.slug)
