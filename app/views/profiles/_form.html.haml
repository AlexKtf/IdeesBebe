= form_for @user.profile, url: profile_path(@user.slug), method: :put, html: { multipart: true } do |f|
  - if @user.profile.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.profile.errors.count, "error")
        prohibited this profile from being saved:
      %ul
        - @user.profile.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label 'Pr√©nom'
    %br/
    = f.text_field :first_name
  .field
    = f.label 'Nom'
    %br/
    = f.text_field :last_name
  .field
    = f.label 'Avatar'
    %br/
    = f.file_field :avatar
  .actions
    = f.submit 'Sauvegarder'
